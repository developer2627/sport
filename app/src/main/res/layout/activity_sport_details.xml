<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SportDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IV_sportimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/A1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#6F12F1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Sport Name"
                android:textColor="#38D327"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Sport Name"
                android:textColor="#2A2B32"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/A2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#6F12F1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Type Of  The Game"
                android:textColor="#38D327"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Type Of The Game"
                android:textColor="#2A2B32"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/A3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#6F12F1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Sport Description"
                android:textColor="#38D327"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Description Of The Game"
                android:textAllCaps="false"
                android:textColor="#2A2B32"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>